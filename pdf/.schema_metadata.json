{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/entries",

  "$defs": {
    "entries": {
      "description": "All entries in a directory",
      "allOf": [
        {
          "$ref": "#/$defs/directory-listings"
        }
      ],
      "patternProperties": {
        "^([^/]+|\\./)$": {
          "description": "File or directory name",
          "$ref": "#/$defs/entry"
        }
      },
      "additionalProperties": false
    },

    "entry": {
      "description": "File system entry, either a file or a directory",
      "if": {
        "not": {
          "$ref": "#/$defs/directory-listings"
        }
      },
      "then": {
        "$ref": "#/$defs/file"
      },
      "else": {
        "$ref": "#/$defs/directory"
      }
    },

    "directory": {
      "description": "Directory",
      "$ref": "#/$defs/entries"
    },

    "directory-listings": {
      "properties": {
        "./": {
          "description": "Directory listings, required for all directory entries",
          "oneOf": [
            {
              "description": "Use all files and subdirectories in current directory, sorted alphabetically",
              "const": null
            },
            {
              "description": "Use only specific files and subdirectories",
              "type": "array",
              "items": "string"
            }
          ]
        }
      },
      "required": [
        "./"
      ]
    },

    "file": {
      "description": "File",
      "properties": {
        "title": {
          "description": "Paper title",
          "type": "string"
        },
        "authors": {
          "type": "array",
          "description": "Paper authors",
          "items": {
            "type": "string"
          }
        },
        "doi": {
          "type": "string",
          "description": "DOI"
        }
      },
      "required": ["title", "authors"],
      "additionalProperties": false
    }
  }
}
