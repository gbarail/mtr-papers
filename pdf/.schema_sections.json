{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "items": {
    "$ref": "#/$def/section"
  },

  "$def": {
    "section": {
      "description": "One single section on a webpage, with a table listing all papers to be shown in the section",
      "properties": {
        "section": {
          "description": "Section name",
          "type": "string"
        },
        "data": {
          "$ref": "#/$def/data"
        }
      },
      "additionalProperties": false
    },

    "data": {
      "description": ".yml / .yaml files and keys",
      "type": "array",
      "items": {
        "$ref": "#/$def/data-item"
      }
    },

    "data-item": {
      "properties": {
        "file": {
          "description": ".yml / .yaml file to read from",
          "type": "string"
        },
        "keys": {
          "description": "Keys to use within the file. Use \"/\" to denote hierarchies. Each key that is referenced must be a directory or a file.",
          "type": "array",
          "items": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
